<div class='container' style='margin-top: 5%'>
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <div class='text-center'>
      <img style='max-width: 10%; height: auto;' src='./assets/img/burger.jpg'>
      </div>
      <h1 class='display-4' style='text-align: center;'>Eat Da Burger!</h1>
      <hr class="my-4" style='margin-bottom: 5%'>
      <div class='row'>
        <div class='col-lg-6' style='padding-left: 20%;'>
          {{#each burger}}
          {{#unless devoured}}
          <p>
            <button type='button' class="change-devour btn btn-primary btn-lg" data-id="{{id}}" data-newdevoured="{{devoured}}">{{id}}
            {{burger_name}}</button>
          
            </p>
         
          {{/unless}}
          {{/each}}
        </div>
        <div class='col-lg-6' style='padding-left:20%'>
          {{#each burger}}
          {{#if devoured}}
          <p>
            
            <button type="button" class="btn btn-secondary btn-lg" style='text-decoration: line-through'>{{id}} {{burger_name}}</button>
          </p>
          {{/if}}
          {{/each}}
        </div>
      </div>
      <div class='row'>
        <div class='col'></div>
        <div class='col'>
          <h1 class='text-center'>Add A Burger!</h3>


          <form class="add-burger">

            <div class="form-group text-center" style='margin: 0 auto;'>
              <label for="burger">Burger Name:</label>
              <input style='border-width: medium' type="text" id="burger" name="name">
            </div>
            <p class='text-center' style='font-size: 14px'>Add a burger then <i>click</i> on it to eat it</p>
            <div class='text-center'>
              <button type="submit">Add Burger</button>
            </div>
          </form>
        </div>
        <div class='col'></div>
      </div>
    </div>
  </div>
</div>
</div>
